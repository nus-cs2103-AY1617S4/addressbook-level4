<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
     <GridPane HBox.hgrow="ALWAYS">
       <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
       </columnConstraints>
        <children>
          <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
              <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
             <children>
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <children>
                    <Label fx:id="id" styleClass="cell_big_label">
                      <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                      </minWidth>
                    </Label>
                    <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                  </children>
               </HBox>
               <FlowPane fx:id="tags" />
               <Label fx:id="time" styleClass="cell_small_label" text="\$time" />
               <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
               <Label fx:id="taskType" styleClass="cell_small_label" text="\$taskType" />
             </children>
          </VBox>
            <AnchorPane prefHeight="83.0" prefWidth="150.0" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="button" layoutX="84.0" layoutY="39.0" mnemonicParsing="false" text="Due:" AnchorPane.rightAnchor="7.0" />
               </children>
            </AnchorPane>
        </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
     </GridPane>
   </children>
</HBox>
